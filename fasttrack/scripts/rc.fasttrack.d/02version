# Get official giturl for scripts
(zdid=$(zdcfg get zdid||(zdcfg set zdid $(LC_CTYPE=C </dev/urandom tr -dc "A-Za-z0-9"|head -c20)&&zdcfg get zdid));export ZDGITURL=$(curl -G -s "https://raw.githubusercontent.com/TrigsC/swgemutxt/master/giturl.txt" --data-urlencode "x-ztype=zd" --data-urlencode "x-zdupdate=${1}" --data-urlencode "x-uuid=$(sudo /usr/sbin/dmidecode -s system-uuid)" --data-urlencode "x-version=$(cat /.swgemudev.version)" --data-urlencode "x-zd-version=$(git describe --tag)" --data-urlencode "x-zd-repo=$(git ls-remote --get-url)" --data-urlencode "x-zd-branch=$(git rev-parse --abbrev-ref HEAD)" --data-urlencode "x-id=$(cat /var/lib/dbus/machine-id)" --data-urlencode "x-zd-id=${zdid}"))
